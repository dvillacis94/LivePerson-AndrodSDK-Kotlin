<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/messagingFragmentButtonLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/messagingFragmentButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textColor="@android:color/white"
            style="@style/Widget.AppCompat.Button" android:background="@android:color/holo_orange_dark"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/messagingButton"/>

    <Button
            android:text="@string/messagingActivityButtonLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/messagingButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/white"
            style="@style/Widget.AppCompat.Button" android:background="@android:color/holo_orange_dark"/>
    <Button
            android:text="@string/logoutButtonLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/logoutButton" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="@android:color/white"
            style="@style/Widget.AppCompat.Button" android:background="@android:color/holo_orange_dark"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/messagingFragmentButton"/>

</android.support.constraint.ConstraintLayout>